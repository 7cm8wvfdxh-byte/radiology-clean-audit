# Backend çalıştırmadan önce bu dosyayı .env olarak kopyalayın:
# cp .env.example .env

# Audit imzası için gizli anahtar - MUTLAKA değiştirin, boş bırakmayın
AUDIT_SECRET=CHANGE_ME_STRONG_SECRET_HERE

# JWT token için gizli anahtar - MUTLAKA değiştirin
JWT_SECRET=CHANGE_ME_STRONG_JWT_SECRET_HERE

# Token geçerlilik süresi (dakika)
ACCESS_TOKEN_EXPIRE_MINUTES=480

# Frontend'den izin verilen originler (virgülle ayrılmış)
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Verify URL'inin base kısmı (QR kod ve audit pack'e yazılır)
VERIFY_BASE_URL=http://localhost:8000

# İlk admin kullanıcısı (ilk çalıştırmada otomatik oluşturulur)
DEFAULT_ADMIN_USER=admin
DEFAULT_ADMIN_PASS=CHANGE_ME_ADMIN_PASSWORD
